/* pages/posts/posts.wxss */

swiper {
    width: 100%;
    height: 600rpx;

}

swiper image {
    width: 100%;
    height: 600rpx;

}

.left-side {
    display: flex;
    flex-direction: column;
    float: left;
    font-size: 150rpx;
    color: rgb(7, 54, 3);
    font-weight: 1000;
    font-family:STZhongsong;

}

.book-text1 {
   
    margin-left: 80rpx;


}

.book-text2 {
    margin-left: 80rpx;
}

.book-text3 {
    margin-left: 80rpx;
}

.right-side {
    margin-right: 20rpx;
    margin: 10rpx 0 20rpx 10rpx;
    width: 60%;
    height: 600rpx;
    float: right;
}

.author-date {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.headpic {
    border-radius: 50%;
    margin-top: 10rpx;
    width: 70rpx;
    height: 70rpx;
    margin-left: 20rpx;
    margin-bottom: 40rpx;

}

.date {
    margin-left: 20rpx;
}

.user-id {
    margin-left: 20rpx;
    font-size: 26rpx;
    color: rgb(17, 35, 117);
}

.full-page {
    display: flex;
    flex-direction: column;
}

.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    border-top: 2px solid rgb(171, 221, 147);
    border-bottom: 2px solid rgb(171, 221, 147);
    padding-bottom: 10rpx;
}

.header {
    font-size: 40rpx;
    font-weight: 600;
    margin-left: 20rpx;
    margin-bottom: 40rpx;
}


.book-combination {
    display: flex;
    flex-direction: row;
}

.book-content {
    margin-top: 30rpx;
    width: 400rpx;
    display: flex;
    flex-direction: column;
    font-size: 30rpx;
    font-weight: 500;
    margin-right: 20rpx;
    margin-left: 40rpx;
    margin-bottom: 20rpx;
    
}

.date {
    font-size: 26rpx;
}

.topic {
 
    font-weight: bold;
    margin-left: 40rpx;
    margin-bottom: 40rpx;
   
}

.book-image {
    margin-top:30rpx ;
    margin-left: 20rpx;
    width: 400rpx;
    height: 500rpx;
}

.review-book {
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    letter-spacing: 2px;
    font-size: 30rpx;
}

.like-view {
    margin-left: 20rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.star-font {
    margin-left: 20rpx;
    margin-right: 20rpx;
    size: 20rpx;
    color: gray;
}

.view-font {
    margin-left: 20rpx;
    size: 10rpx;
    color: gray;
}

